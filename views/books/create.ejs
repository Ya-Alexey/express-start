<%- include('../layout/default_start', { title: title }) %>
    <form method="post" enctype="multipart/form-data">
        <div class="field">
            <label class="label">title</label>
            <div class="control">
              <input class="input" type="text" placeholder="Text input" name="title">
            </div>
        </div>
        <div class="field">
            <label class="label">description</label>
            <div class="control">
              <input class="input" type="text" placeholder="Text input" name="description">
            </div>
        </div>
        <div class="field">
            <label class="label">authors</label>
            <div class="control">
              <input class="input" type="text" placeholder="Text input" name="authors">
            </div>
        </div>
        <div class="field">
            <label class="label">favorite</label>
            <div class="control">
              <input class="input" type="text" placeholder="Text input" name="favorite">
            </div>
        </div>
        <div class="field">
            <label class="label">fileCover</label>
            <div class="control">
              <input class="input" type="text" placeholder="Text input" name="fileCover">
            </div>
        </div>
